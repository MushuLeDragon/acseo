{% extends 'base.html.twig' %}

{% block title 'Admin' %}

{% block body %}
  <h1>Admin</h1>

  <style>
    table,
    tr,
    th,
    td {
      border: 1px solid black;
    }
  </style>

  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Fistname</th>
        <th>Lastname</th>
        <th>Message</th>
        <th>Status</th>
        <th>JSON</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {% for email, contactJsons in datas %}
        {% set count = contactJsons|length %}
        {% if count > 0 %}
          {% for contact in contactJsons %}
            <tr>
              {% if loop.first %}
                <td rowspan="{{ count }}">{{ email }}</td>
              {% endif %}
              <td>{{ contact.firstname }}</td>
              <td>{{ contact.lastname }}</td>
              <td>{{ contact.content }}</td>
              <td>{{ contact.status ? 'Processing' : 'Archived' }}</td>
              <td>{{ contact.json }}.json</td>
              <td>
                <a href="{{ path('contact_toggle_status', { 'id': contact.id }) }}">
                  {{ contact.status ? 'Archive' : 'Restore' }}
                </a>
                {# <button>
                  {{ contact.status ? 'Archive' : 'Restore' }}
                </button> #}
              </td>
            </tr>
          {% endfor %}
        {% endif %}
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
